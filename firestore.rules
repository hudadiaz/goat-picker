rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read: if request.auth != null
    }

    match /profiles/{uid} {
      allow write: if request.auth.uid == uid
    }

    match /votes/{year}/{week}/{uid} {
      allow write: if request.auth.uid == uid
    }

    match /attendances/{date}/attendances/{uid} {
      allow write: if request.auth.uid == uid
    }
  }
}
