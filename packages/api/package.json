{
  "name": "api",
  "scripts": {
    "api:lint": "eslint --ext .js,.ts .",
    "api:build": "yarn run api:lint && yarn tsc",
    "api:serve": "yarn run api:build && firebase emulators:start --only functions",
    "api:shell": "yarn run api:build && firebase functions:shell",
    "api:deploy": "firebase deploy --only functions",
    "api:logs": "firebase functions:log",
    "api:start": "yarn node ./lib/slack/index.js",
    "api:gcp-deploy": "yarn node app.yaml.js && gcloud app deploy"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@slack/bolt": "^3.12.1",
    "axios": "^0.27.2",
    "dotenv": "^16.0.3",
    "firebase-admin": "^11.2.0",
    "firebase-functions": "^4.0.2",
    "luxon": "^3.0.3",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@types/luxon": "^3.0.1",
    "@types/node": "^18.11.9",
    "@types/pluralize": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.26.0",
    "typescript": "^4.8.4",
    "yaml": "^2.1.3"
  },
  "private": true
}
