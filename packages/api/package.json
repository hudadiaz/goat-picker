{
  "name": "api",
  "scripts": {
    "api:lint": "eslint --ext .js,.ts .",
    "api:build": "yarn run api:lint && tsc",
    "api:serve": "yarn run api:build && firebase emulators:start --only functions",
    "api:shell": "yarn run api:build && firebase functions:shell",
    "api:deploy": "firebase deploy --only functions",
    "api:logs": "firebase functions:log",
    "api:start": "node ./lib/slack/index.js",
    "api:gcp-build": "tsc -p .",
    "api:gcp-deploy": "gcloud app deploy"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@slack/bolt": "^3.12.1",
    "@types/node": "^18.11.9",
    "axios": "^0.27.2",
    "firebase-admin": "^10.0.0",
    "firebase-functions": "^3.24.0",
    "https": "^1.0.0",
    "luxon": "^3.0.3",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@types/luxon": "^3.0.1",
    "@types/pluralize": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "typescript": "^4.8.4"
  },
  "private": true
}
